generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "windows"]
}

generator docs {
  provider = "node node_modules/prisma-docs-generator"
  output   = "../generated/docs"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique // 登录账号
  password String // 密码（存 Hash 值，不要存明文）
  nickname String? // 昵称
  avatar   String? // 头像 URL

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // --- 新增关联 ---
  categories        Category[] // 用户拥有的分类
  links             Link[] // 用户拥有的链接（方便统计总数或全局搜索）
  files             File[]
  passwordHistories PasswordHistory[]
}

model VerificationCode {
  id        Int      @id @default(autoincrement())
  email     String
  code      String
  used      Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}

// --------------------------------------
// 分类模型 (对应 Chrome 书签的文件夹)
// --------------------------------------
model Category {
  id        Int     @id @default(autoincrement())
  name      String  @db.VarChar(255) // 分类名称
  sortOrder Int     @default(0) // 排序权重，数字越小越靠前
  isPublic  Boolean @default(false) // 是否公开（未来扩展分享功能用）
  icon      String? @db.VarChar(255) // 分类图标

  // --- 关联用户 ---
  userId Int?
  user   User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  // --- 关联父级分类 (实现无限嵌套) ---
  parentId Int? // 根目录的 parentId 为 null
  parent   Category?  @relation("CategoryToParent", fields: [parentId], references: [id], onDelete: Cascade)
  children Category[] @relation("CategoryToParent")

  // --- 关联链接 ---
  links Link[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 索引优化：经常查询某用户下的某层级分类
  @@index([userId, parentId])
}

// --------------------------------------
// 链接模型 (对应书签)
// --------------------------------------
model Link {
  id          Int     @id @default(autoincrement())
  title       String  @db.VarChar(255)
  url         String  @db.Text // URL 可能很长，使用 Text 类型
  description String? @db.VarChar(1000) // 网站描述/备注

  // --- 图标与封面 ---
  icon String? @db.Text

  // 封面图：存 URL
  cover String? @db.VarChar(2048)

  sortOrder Int @default(0) // 排序权重

  // --- 关联分类 ---
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  // --- 关联用户 ---
  // 虽然可以通过 Category 找到 User，但直接关联 User 方便做“我的所有书签”查询
  userId Int?
  user   User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId]) // 查找分类下的链接
  @@index([userId]) // 查找用户的所有链接
}

// --------------------------------------
// 通用文件表：存储所有上传文件的元数据
// --------------------------------------
model File {
  id           Int    @id @default(autoincrement())
  // 原始文件名（用户上传时的名称）
  originalName String @db.VarChar(255)
  // 保存到磁盘时使用的文件名（通常会加 UUID）
  filename     String @db.VarChar(255)

  // MIME 类型，例如 image/png、application/pdf
  mimeType String @db.VarChar(255)
  // 文件大小（字节数）
  size     Int

  // 文件扩展名（可选），如 "png" / "pdf"
  ext String? @db.VarChar(50)

  // 逻辑存储目录（业务上的分类），例如：avatars、covers、imports/bookmarks
  dir  String @db.VarChar(255)
  // 磁盘上的相对路径或绝对路径，例如：uploads/avatars/xxx.png
  path String @db.VarChar(1024)
  // 对外访问 URL，例如：https://cdn.xxx.com/avatars/xxx.png 或 /uploads/avatars/xxx.png
  url  String @db.VarChar(2048)

  // 上传者（可选）
  uploaderId Int?
  uploader   User? @relation(fields: [uploaderId], references: [id], onDelete: SetNull)

  createdAt       DateTime         @default(now())
  fileAttachments FileAttachment[]

  // 索引：常按目录或上传者查询
  @@index([dir])
  @@index([uploaderId])
}

// --------------------------------------
// 文件关联表：实现文件与任意业务实体的多态关联
// 例如：User 头像、Link 封面、导入书签的原始文件等
// --------------------------------------
model FileAttachment {
  id Int @id @default(autoincrement())

  // 关联的文件
  fileId Int
  file   File @relation(fields: [fileId], references: [id], onDelete: Cascade)

  // 通用关联字段（多态）
  // entityType 用来存实体类型，如：'User' | 'Link' | 'Category' | 'BookmarkImport' 等
  entityType String @db.VarChar(100)
  // entityId 对应实体表的主键 ID
  entityId   Int

  // 用途：如 'avatar' | 'cover' | 'import_source' 等（可选）
  usage String? @db.VarChar(100)

  createdAt DateTime @default(now())

  // 常见查询：查某个实体的所有文件
  @@index([entityType, entityId])
  // 查某个文件被挂在哪些实体上（用于清理）
  @@index([fileId])
}

// --------------------------------------
// 密码历史表：记录用户密码历史
// 用于修改密码时不能与近三次密码相同
// --------------------------------------
model PasswordHistory {
  id        Int      @id @default(autoincrement())
  userId    Int
  password  String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId, createdAt]) // 复合索引 查询最近的三个密码更快
}
