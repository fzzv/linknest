{
  "name": "@linknest/api",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "pnpm build --watch",
    "build": "tsc -b -v",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\""
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    }
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "kysely": "^0.28.5",
    "nestjs-cls": "^6.0.1",
    "nestjs-kysely": "^3.1.1",
    "pg-connection-string": "^2.9.1",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@linknest/eslint-config": "workspace:*",
    "@linknest/typescript-config": "workspace:*",
    "@types/express": "^4.17.17",
    "@types/node": "^22.10.7",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4"
  }
}
